                                        <label asp-for="FirstName"><strong>First Name</strong></label> <!-- Display label for FirstName property -->
                                        <input asp-for="FirstName" class="form-control" required /> <!-- Input field for FirstName -->
                                        <span asp-validation-for="FirstName" class="text-danger"></span> <!-- Display validation message for FirstName -->
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LastName"><strong>Last Name</strong></label> <!-- Display label for LastName property -->

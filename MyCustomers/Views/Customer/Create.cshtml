                                        <label asp-for="Email"><strong>Email</strong></label> <!-- Display label for Email property -->
                                        <input asp-for="Email" class="form-control" /> <!-- Input field for Email -->
                                        <span asp-validation-for="Email" class="text-danger"></span> <!-- Display validation message for Email -->
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Mobile"><strong>Mobile</strong></label> <!-- Display label for Mobile property -->
                                        <input asp-for="Mobile" class="form-control" required /> <!-- Input field for Mobile -->
                                        <span asp-validation-for="Mobile" class="text-danger"></span> <!-- Display validation message for Mobile -->
                                    </div>

<section class="vh-100 d-flex justify-content-center align-items-center" style="background-color: #eee;">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-8 col-xl-12">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-10 col-lg-6 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Customer Registration Form</p>

                                <form asp-action="Create" style="max-width: 500px; margin: 0 auto;">
                                    <!-- Specify the action to be invoked upon form submission -->

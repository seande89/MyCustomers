                                        <span asp-validation-for="LastName" class="text-danger"></span> <!-- Display validation message for LastName -->
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Address"><strong>Address</strong></label> <!-- Display label for Address property -->

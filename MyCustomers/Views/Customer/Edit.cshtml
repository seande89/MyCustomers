<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Customer</p>

                                <form asp-action="Edit" style="max-width: 500px; margin: 0 auto;">
                                    <!-- Specify the action to be invoked upon form submission -->
                                    <div class="form-group">

                                        <label for="FirstName"><strong>First Name</strong> </label> <!-- Display label for FirstName property -->
                                        <input id="FirstName" asp-for="FirstName" class="form-control" required /> <!-- Input field for FirstName -->
                                        <span asp-validation-for="FirstName" class="text-danger"></span> <!-- Display validation message for FirstName -->
                                    </div>
                                    <div class="form-group">
                                        <label for="LastName"><strong>Last Name</strong></label> <!-- Display label for LastName property -->
                                        <input id="LastName" asp-for="LastName" class="form-control" required /> <!-- Input field for LastName -->
                                        <span asp-validation-for="LastName" class="text-danger"></span> <!-- Display validation message for LastName -->
                                    </div>
                                    <div class="form-group">
                                        <label for="Address"><strong>Address</strong></label> <!-- Display label for Address property -->
                                        <textarea id="Address" asp-for="Address" class="form-control" rows="3"></textarea> <!-- Text area for Address -->
                                        <span asp-validation-for="Address" class="text-danger"></span> <!-- Display validation message for Address -->
                                    </div>
                                    <div class="form-group">
                                        <label for="Email"><strong>Email</strong></label> <!-- Display label for Email property -->
                                        <input id="Email" asp-for="Email" type="email" class="form-control" /> <!-- Input field for Email -->
                                        <span asp-validation-for="Email" class="text-danger"></span> <!-- Display validation message for Email -->
                                    </div>
                                    <div class="form-group">
                                        <label for="Mobile"><strong>Mobile</strong></label> <!-- Display label for Mobile property -->
                                        <input id="Mobile" asp-for="Mobile" class="form-control" required /> <!-- Input field for Mobile -->
                                        <span asp-validation-for="Mobile" class="text-danger"></span> <!-- Display validation message for Mobile -->
                                    </div>
                                    <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />
                                    <input type="hidden" asp-for="UserId" value="1" />
                                    <button type="submit" class="btn btn-dark btn-block my-3">Save Changes</button> <!-- Submit button for form -->
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
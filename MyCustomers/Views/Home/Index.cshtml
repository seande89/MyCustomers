@model CustomersVehiclesListViewModel // Specify the model type for this view

@{
    ViewData["Title"] = "Customer List";

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css">

<div class="">
    <h2 class="ms-3 pt-2">Neilsha's Auto Parts Ltd</h2>
    <h3 class="ms-3 pt-2">Customer Database</h3>
    <div class="px-4 py-2">
        <table id="customer" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-left">First Name</th> <!-- Align header to the left -->
                    <th class="text-left">Last Name</th> <!-- Align header to the left -->
                    <th class="text-left">Email</th> <!-- Align header to the left -->
                    <th class="text-left">Contact</th> <!-- Align header to the left -->
                    <th></th> <!-- Add a column for action buttons -->
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.customers)
                {
                    <tr>
                        <td class="text-left">@customer.FirstName</td> <!-- Align cell content to the left -->
                        <td class="text-left">@customer.LastName</td> <!-- Align cell content to the left -->
                        <td class="text-left">@customer.Email</td> <!-- Align cell content to the left -->
                        <td class="text-left">@customer.Mobile</td> <!-- Align cell content to the left -->
                        <td class="d-flex justify-content-end">

                            <!-- Create a link to view the details of the customer -->
                            <a class="row-action" asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id" class="btn">
                                <i class="material-icons text-secondary">visibility</i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>

        <script>new DataTable('#customer');</script>


    </div>

</div>




